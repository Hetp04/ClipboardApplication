              topK: 40,
              topP: 0.95,
              maxOutputTokens: 1024
            }
          })
        });
        
        if (!response.ok) {
          const errorText = await response.text();
          console.error(`‚ùå Error from Gemini API (${response.status}):`, errorText);
          
          // If it's a rate limit error, retry
          if (response.status === 429) {
